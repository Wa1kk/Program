program project1;

var
elm1, elm2, operation : string; // Полученные значения, знак операции
num1, num2, result : double;    // Числа, результат
code : integer;                 // Счетчик

procedure Stop(q : String);     // Поиск q для выхода из программы
begin
    if q = 'q' then
    begin
       halt;
    end;
end;

begin
    // Получение первого числа
    repeat
       Write('Введите первое число: ');
       ReadLn(elm1);
       Stop(elm1);
       Val(elm1, num1, code);
    until code = 0;

    // Получение знака операции
    repeat
       Write('Введите знак операции: ');
       ReadLn(operation);
       Stop(operation);
    until (operation = '+') or (operation = '-') or (operation = ':') or (operation = '*');

    // Получение второго числа
    repeat
       Write('Введите второе число: ');
       ReadLn(elm2);
       Stop(elm2);
       if elm2 = '0' then
       begin
          WriteLn('На ноль делить нельзя.')
       end;
       Val(elm2, num2, code);
    until (code = 0) and (elm2[1] <> '0');

    // Вычисления
    if operation = '+' then
    begin
       result := num1 + num2;
    end;

    if operation = '-' then
    begin
       result := num1 - num2;
    end;

    if operation = '*' then
    begin
       result := num1 * num2;
    end;

    if operation = ':' then
    begin
       result := num1 / num2;
    end;

    // Вывод результата
    Write('Результат: ', result :0 :2);
    ReadLn;
end.
